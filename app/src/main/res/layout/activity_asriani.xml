<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsrianiActivity">

<ImageView
android:id="@+id/img_photo"
android:src="@drawable/asriani"
android:layout_width="100dp"
android:layout_height="150dp"
android:layout_marginLeft="40dp"
android:layout_marginTop="30dp"
android:scaleType="fitXY"/>

<TextView
android:id="@+id/txt_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginStart="150dp"
android:text="ASRIANI"
android:layout_marginTop="50dp"
android:textSize="18sp"
android:textStyle="bold"/>


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Asriani adalah mahasiswa dari Fakultas Teknik
Program Studi Teknik Informatika yang sekaran sedang menjalani
semester 3 di prodi Informatika. dia berasal dari pantaibarat Desa Sipure Kecamatan Balaesang Kabupaten Donggala
Dia merupakann alumni dari SMAN 1 Balaesang dan pernah menjadi bagian
dari Osis dan Pramuka di SMAN 1 balaesang."
android:textStyle="bold"
android:textSize="15sp"
android:textAlignment="center"
android:layout_centerInParent="true"/>

</RelativeLayout>